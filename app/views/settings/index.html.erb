<% content_for :title, "Settings - Private Jet Booking Platform" %>

<div class="flex justify-between items-center mb-6">
  <h2 class="text-xl font-semibold text-yellow-700">System Settings</h2>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <!-- User Settings -->
  <div class="bg-white rounded-xl shadow-sm">
    <div class="p-6 border-b border-gray-100">
      <h3 class="text-lg font-semibold text-yellow-700">User Profile</h3>
    </div>
    <div class="p-6">
      <div class="flex items-center mb-6">
        <div class="w-16 h-16 bg-gray-200 rounded-full flex items-center justify-center mr-4">
          <span class="text-lg font-semibold text-gray-600">
            <%= @user_settings[:name].split(' ').map(&:first).join('') %>
          </span>
        </div>
        <div>
          <h4 class="text-lg font-semibold text-gray-800"><%= @user_settings[:name] %></h4>
          <p class="text-sm text-gray-600"><%= @user_settings[:role] %></p>
          <p class="text-sm text-gray-500"><%= @user_settings[:department] %></p>
        </div>
      </div>
      
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input type="email" value="<%= @user_settings[:email] %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-yellow-500 focus:border-yellow-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Language</label>
          <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-yellow-500 focus:border-yellow-500">
            <option value="en" <%= 'selected' if @user_settings[:language] == 'en' %>>English</option>
            <option value="ar" <%= 'selected' if @user_settings[:language] == 'ar' %>>العربية</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Timezone</label>
          <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-yellow-500 focus:border-yellow-500">
            <option value="Asia/Dubai" <%= 'selected' if @user_settings[:timezone] == 'Asia/Dubai' %>>Asia/Dubai (GST)</option>
            <option value="UTC">UTC</option>
          </select>
        </div>
      </div>
      
      <button class="w-full mt-6 bg-yellow-700 text-white py-2 px-4 rounded-lg hover:bg-yellow-800">
        Update Profile
      </button>
    </div>
  </div>
  
  <!-- Notification Settings -->
  <div class="bg-white rounded-xl shadow-sm">
    <div class="p-6 border-b border-gray-100">
      <h3 class="text-lg font-semibold text-yellow-700">Notifications</h3>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <div>
            <h4 class="text-sm font-medium text-gray-700">Email Notifications</h4>
            <p class="text-xs text-gray-500">Receive updates via email</p>
          </div>
          <label class="relative inline-flex items-center cursor-pointer">
            <input type="checkbox" class="sr-only peer" <%= 'checked' if @user_settings[:notifications][:email] %>>
            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-yellow-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-yellow-600"></div>
          </label>
        </div>
        
        <div class="flex items-center justify-between">
          <div>
            <h4 class="text-sm font-medium text-gray-700">SMS Notifications</h4>
            <p class="text-xs text-gray-500">Receive urgent updates via SMS</p>
          </div>
          <label class="relative inline-flex items-center cursor-pointer">
            <input type="checkbox" class="sr-only peer" <%= 'checked' if @user_settings[:notifications][:sms] %>>
            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-yellow-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-yellow-600"></div>
          </label>
        </div>
        
        <div class="flex items-center justify-between">
          <div>
            <h4 class="text-sm font-medium text-gray-700">In-App Notifications</h4>
            <p class="text-xs text-gray-500">Show notifications in the system</p>
          </div>
          <label class="relative inline-flex items-center cursor-pointer">
            <input type="checkbox" class="sr-only peer" <%= 'checked' if @user_settings[:notifications][:in_app] %>>
            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-yellow-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-yellow-600"></div>
          </label>
        </div>
      </div>
      
      <button class="w-full mt-6 bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700">
        Save Preferences
      </button>
    </div>
  </div>
  
  <!-- System Settings -->
  <div class="bg-white rounded-xl shadow-sm">
    <div class="p-6 border-b border-gray-100">
      <h3 class="text-lg font-semibold text-yellow-700">System Configuration</h3>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <div class="flex justify-between">
          <span class="text-sm text-gray-600">Session Timeout</span>
          <span class="text-sm font-medium"><%= @system_settings[:session_timeout] %> minutes</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm text-gray-600">Max Upload Size</span>
          <span class="text-sm font-medium"><%= @system_settings[:max_file_upload_size] %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm text-gray-600">Backup Frequency</span>
          <span class="text-sm font-medium"><%= @system_settings[:backup_frequency] %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-sm text-gray-600">Maintenance Window</span>
          <span class="text-sm font-medium"><%= @system_settings[:maintenance_window] %></span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Security Settings -->
  <div class="bg-white rounded-xl shadow-sm">
    <div class="p-6 border-b border-gray-100">
      <h3 class="text-lg font-semibold text-yellow-700">Security Settings</h3>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <div>
            <h4 class="text-sm font-medium text-gray-700">Two-Factor Authentication</h4>
            <p class="text-xs text-gray-500">Additional security for your account</p>
          </div>
          <span class="px-2 py-1 text-xs font-medium rounded-full <%= @security_settings[:two_factor_enabled] ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
            <%= @security_settings[:two_factor_enabled] ? 'Enabled' : 'Disabled' %>
          </span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-sm text-gray-600">Password Expiry</span>
          <span class="text-sm font-medium"><%= @security_settings[:password_expiry] %> days</span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-sm text-gray-600">Max Login Attempts</span>
          <span class="text-sm font-medium"><%= @security_settings[:login_attempts] %></span>
        </div>
        
        <div class="flex items-center justify-between">
          <span class="text-sm text-gray-600">Audit Logging</span>
          <span class="px-2 py-1 text-xs font-medium rounded-full <%= @security_settings[:audit_logging] ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
            <%= @security_settings[:audit_logging] ? 'Active' : 'Inactive' %>
          </span>
        </div>
      </div>
      
      <button class="w-full mt-6 bg-red-600 text-white py-2 px-4 rounded-lg hover:bg-red-700">
        Manage Security
      </button>
    </div>
  </div>
</div>
