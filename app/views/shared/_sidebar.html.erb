<div class="w-72 bg-yellow-700 text-white flex flex-col" 
     style="background-image: url('data:image/svg+xml,%3Csvg width=\'20\' height=\'12\' viewBox=\'0 0 20 12\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cpath d=\'M6 12c0-.622-.095-1.221-.27-1.785A5.982 5.982 0 0 0 10 12c1.67 0 3.182-.683 4.27-1.785A5.998 5.998 0 0 0 14 12h2a4 4 0 0 1 4-4V6c-1.67 0-3.182.683-4.27 1.785C15.905 7.22 16 6.622 16 6c0-.622-.095-1.221-.27-1.785A5.982 5.982 0 0 0 20 6V4a4 4 0 0 1-4-4h-2c0 .622.095 1.221.27 1.785A5.982 5.982 0 0 0 10 0C8.33 0 6.818.683 5.73 1.785 5.905 1.22 6 .622 6 0H4a4 4 0 0 1-4 4v2c1.67 0 3.182.683 4.27 1.785A5.998 5.998 0 0 1 4 6c0-.622.095-1.221.27-1.785A5.982 5.982 0 0 1 0 6v2a4 4 0 0 1 4 4h2zm-4 0a2 2 0 0 0-2-2v2h2zm16 0a2 2 0 0 1 2-2v2h-2zM0 2a2 2 0 0 0 2-2H0v2zm20 0a2 2 0 0 1-2-2h2v2zm-10 8a4 4 0 1 0 0-8 4 4 0 0 0 0 8zm0-2a2 2 0 1 0 0-4 2 2 0 0 0 0 4z\' fill=\'%23FFF\' fill-opacity=\'0.1\' fill-rule=\'evenodd\'/%3E%3C/svg%3E')">
  <div class="p-6 border-b border-white/20">
    <h1 class="text-xl font-bold text-white">Private Jet Booking Platform</h1>
    <p class="text-sm text-white/80">Management Console</p>
  </div>
  
  <div class="flex-1 px-4 py-4 overflow-y-auto">
    <ul class="space-y-1">
      <li>
        <%= link_to dashboard_path, class: "w-full flex items-center py-3 px-4 rounded-lg text-white #{request.path == dashboard_path ? 'bg-white/20 font-medium' : 'hover:bg-white/10'}" do %>
          <i data-lucide="layout-dashboard" class="w-5 h-5 mr-3"></i>
          <span>Dashboard</span>
        <% end %>
      </li>
      <li>
        <%= link_to flight_requests_path, class: "w-full flex items-center py-3 px-4 rounded-lg text-white #{request.path == flight_requests_path ? 'bg-white/20 font-medium' : 'hover:bg-white/10'}" do %>
          <i data-lucide="calendar" class="w-5 h-5 mr-3"></i>
          <span>Flight Requests</span>
        <% end %>
      </li>
      <li>
        <%= link_to aircraft_fleet_path, class: "w-full flex items-center py-3 px-4 rounded-lg text-white #{request.path == aircraft_fleet_path ? 'bg-white/20 font-medium' : 'hover:bg-white/10'}" do %>
          <i data-lucide="plane" class="w-5 h-5 mr-3"></i>
          <span>Aircraft Fleet</span>
        <% end %>
      </li>
      <li>
        <%= link_to vip_profiles_path, class: "w-full flex items-center py-3 px-4 rounded-lg text-white #{request.path == vip_profiles_path ? 'bg-white/20 font-medium' : 'hover:bg-white/10'}" do %>
          <i data-lucide="crown" class="w-5 h-5 mr-3"></i>
          <span>VIP Profiles</span>
        <% end %>
      </li>
      <li>
        <%= link_to sources_path, class: "w-full flex items-center py-3 px-4 rounded-lg text-white #{request.path == sources_path ? 'bg-white/20 font-medium' : 'hover:bg-white/10'}" do %>
          <i data-lucide="user-check" class="w-5 h-5 mr-3"></i>
          <span>Sources of Request</span>
        <% end %>
      </li>
      <li>
        <%= link_to reports_path, class: "w-full flex items-center py-3 px-4 rounded-lg text-white #{request.path == reports_path ? 'bg-white/20 font-medium' : 'hover:bg-white/10'}" do %>
          <i data-lucide="trending-up" class="w-5 h-5 mr-3"></i>
          <span>Reports</span>
        <% end %>
      </li>
      <li>
        <%= link_to settings_path, class: "w-full flex items-center py-3 px-4 rounded-lg text-white #{request.path == settings_path ? 'bg-white/20 font-medium' : 'hover:bg-white/10'}" do %>
          <i data-lucide="settings" class="w-5 h-5 mr-3"></i>
          <span>Settings</span>
        <% end %>
      </li>
    </ul>
  </div>
  
  <div class="p-4 border-t border-white/20">
    <div class="flex items-center">
      <div class="w-10 h-10 rounded-full bg-white mr-3 flex items-center justify-center text-yellow-700">
        <i data-lucide="briefcase" class="w-5 h-5"></i>
      </div>
      <div>
        <p class="text-sm font-medium">Presidential Flight - Al Matar</p>
        <p class="text-xs text-white/80">Abu Dhabi, UAE</p>
      </div>
    </div>
  </div>
</div>
