<% content_for :title, "#{content_for(:page_title)} - Private Jet Booking Platform" %>

<!-- Page Header: Title + Controls -->
<div class="flex justify-between items-center mb-6">
  <!-- Left: Page Title -->
  <h2 class="text-xl font-semibold text-yellow-700"><%= content_for(:page_title) %></h2>
  
  <!-- Right: Controls (Dropdowns, Buttons) -->
  <div class="flex items-center space-x-3">
    <%= content_for(:page_controls) %>
  </div>
</div>

<!-- Optional: Statistics/Metrics Section -->
<%= content_for(:page_stats) if content_for?(:page_stats) %>

<!-- Main Content Area -->
<%= content_for(:page_content) %>
