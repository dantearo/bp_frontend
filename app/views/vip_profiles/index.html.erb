<% content_for :title, "VIP Profiles - Private Jet Booking Platform" %>

<div class="flex justify-between items-center mb-6">
  <h2 class="text-xl font-semibold text-yellow-700">VIP Profiles Management</h2>
  <button class="bg-yellow-700 text-white px-4 py-2 rounded-lg hover:bg-yellow-800 flex items-center">
    <i data-lucide="plus" class="w-4 h-4 mr-2"></i>
    Add VIP Profile
  </button>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <% @vip_profiles.each do |profile| %>
    <div class="bg-white rounded-xl shadow-sm p-6">
      <div class="flex justify-between items-start mb-4">
        <div class="flex items-center">
          <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center">
            <i data-lucide="crown" class="w-6 h-6 text-yellow-600"></i>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-semibold text-gray-800"><%= profile[:codename] %></h3>
            <p class="text-sm text-yellow-600 font-medium"><%= profile[:tier] %></p>
          </div>
        </div>
        <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-700">
          <%= profile[:status] %>
        </span>
      </div>
      
      <div class="grid grid-cols-2 gap-4 mb-4">
        <div>
          <p class="text-xs text-gray-500 mb-1">Preferred Aircraft</p>
          <p class="text-sm font-medium"><%= profile[:preferred_aircraft] %></p>
        </div>
        <div>
          <p class="text-xs text-gray-500 mb-1">Total Flights</p>
          <p class="text-sm font-medium"><%= profile[:total_flights] %></p>
        </div>
        <div>
          <p class="text-xs text-gray-500 mb-1">Last Flight</p>
          <p class="text-sm font-medium"><%= Date.parse(profile[:last_flight]).strftime("%m/%d/%Y") %></p>
        </div>
        <div>
          <p class="text-xs text-gray-500 mb-1">Profile ID</p>
          <p class="text-sm font-medium">#<%= profile[:id] %></p>
        </div>
      </div>
      
      <div class="mb-4">
        <p class="text-xs text-gray-500 mb-2">Special Requirements</p>
        <div class="flex flex-wrap gap-2">
          <% profile[:special_requirements].each do |req| %>
            <span class="text-xs px-2 py-1 bg-blue-100 text-blue-700 rounded-full">
              <%= req %>
            </span>
          <% end %>
        </div>
      </div>
      
      <div class="flex space-x-2">
        <%= link_to vip_profile_path(profile[:id]), class: "flex-1 bg-blue-600 text-white py-2 px-3 rounded-lg hover:bg-blue-700 text-sm text-center" do %>
          View Profile
        <% end %>
        <button class="flex-1 bg-gray-600 text-white py-2 px-3 rounded-lg hover:bg-gray-700 text-sm">
          Edit
        </button>
      </div>
    </div>
  <% end %>
</div>
