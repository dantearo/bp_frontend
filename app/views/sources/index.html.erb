<% content_for :title, "Sources of Request - Private Jet Booking Platform" %>

<div class="flex justify-between items-center mb-6">
  <h2 class="text-xl font-semibold text-yellow-700">Sources of Request Management</h2>
  <button class="bg-yellow-700 text-white px-4 py-2 rounded-lg hover:bg-yellow-800 flex items-center">
    <i data-lucide="user-plus" class="w-4 h-4 mr-2"></i>
    Add Source
  </button>
</div>

<div class="bg-white rounded-xl shadow-sm">
  <div class="p-6 border-b border-gray-100">
    <h3 class="text-lg font-semibold text-yellow-700">Authorized Request Sources</h3>
  </div>
  
  <div class="divide-y divide-gray-100">
    <% @sources.each do |source| %>
      <div class="p-6">
        <div class="flex justify-between items-start">
          <div class="flex-1">
            <div class="flex items-center mb-2">
              <div class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center mr-3">
                <span class="text-sm font-medium text-gray-600">
                  <%= source[:name].split(' ').map(&:first).join('') %>
                </span>
              </div>
              <div>
                <h4 class="text-lg font-semibold text-gray-800"><%= source[:name] %></h4>
                <p class="text-sm text-gray-600"><%= source[:role] %></p>
              </div>
            </div>
            
            <div class="grid grid-cols-3 gap-4 mt-4">
              <div>
                <p class="text-xs text-gray-500 mb-1">Organization</p>
                <p class="text-sm font-medium"><%= source[:organization] %></p>
              </div>
              <div>
                <p class="text-xs text-gray-500 mb-1">Access Level</p>
                <span class="text-xs px-2 py-1 rounded-full font-medium <%= 
                  case source[:access_level]
                  when 'Presidential' then 'bg-red-100 text-red-700'
                  when 'Government' then 'bg-blue-100 text-blue-700'
                  when 'Corporate' then 'bg-green-100 text-green-700'
                  else 'bg-gray-100 text-gray-700'
                  end
                %>">
                  <%= source[:access_level] %>
                </span>
              </div>
              <div>
                <p class="text-xs text-gray-500 mb-1">Contact Method</p>
                <p class="text-sm font-medium"><%= source[:contact_method] %></p>
              </div>
            </div>
          </div>
          
          <div class="text-right">
            <div class="grid grid-cols-2 gap-4 mb-4">
              <div class="text-center">
                <p class="text-2xl font-bold text-yellow-600"><%= source[:active_requests] %></p>
                <p class="text-xs text-gray-500">Active</p>
              </div>
              <div class="text-center">
                <p class="text-2xl font-bold text-gray-800"><%= source[:total_requests] %></p>
                <p class="text-xs text-gray-500">Total</p>
              </div>
            </div>
            <p class="text-xs text-gray-500">
              Last request: <%= Date.parse(source[:last_request]).strftime("%m/%d/%Y") %>
            </p>
          </div>
        </div>
        
        <div class="flex justify-between items-center mt-4 pt-4 border-t">
          <div class="flex space-x-2">
            <button class="bg-blue-600 text-white py-2 px-3 rounded-lg hover:bg-blue-700 text-sm">
              View Requests
            </button>
            <button class="bg-gray-600 text-white py-2 px-3 rounded-lg hover:bg-gray-700 text-sm">
              Edit Profile
            </button>
          </div>
          <div class="flex items-center space-x-4 text-sm text-gray-500">
            <div class="flex items-center">
              <i data-lucide="phone" class="w-4 h-4 mr-1"></i>
              Contact
            </div>
            <div class="flex items-center">
              <i data-lucide="mail" class="w-4 h-4 mr-1"></i>
              Message
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
